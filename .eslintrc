{
    "extends": [
        "finn",
        "finn/node",
        "finn-prettier"
    ],
    "parserOptions": {
        "ecmaVersion": "2017"
    },
    "rules": {
        "no-param-reassign": "error",
        "no-return-await": "error",
        "max-nested-callbacks": "off",
        "new-cap": [
            "error",
            {
                "capIsNewExceptions": [
                    "Router",
                    "Mitm"
                ]
            }
        ]
    }
}
