{
    "env": {
        "node": true
    },
    "extends": ["airbnb-base", "prettier"],
    "parserOptions": {
        "ecmaVersion": 2019
    },
    "plugins": ["prettier"],
    "root": true,
    "rules": {
        "class-methods-use-this": [0],
        "prettier/prettier": ["error"],
        "func-names": "off",
        "strict": [0, "global"],
        "no-underscore-dangle": "off",
        "no-plusplus": "off",
        "no-param-reassign": "error",
        "no-return-await": "error",
        "max-nested-callbacks": "off",
        "new-cap": [
            "error",
            {
                "capIsNewExceptions": [
                    "Router",
                    "Mitm"
                ]
            }
        ]
    },
    "ignorePatterns": ["**/docs/api/oas/"]
}
